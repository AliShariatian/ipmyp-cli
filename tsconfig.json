{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "allowArbitraryExtensions": true
  },

  "include": ["src"]
}
